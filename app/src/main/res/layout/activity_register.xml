<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@android:color/white"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng Ký"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50sp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên tài khoản"
                android:textSize="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rectangle_radius"
                android:layout_marginTop="8sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_icon_person"
                    android:layout_marginStart="7sp"
                    android:layout_marginTop="5sp"/>

                <EditText
                    android:id="@+id/edt_Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhập địa chỉ email"
                    android:inputType="textEmailAddress"
                    android:layout_marginStart="10sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textSize="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle_radius"
                android:layout_marginTop="8sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_icon_lock"
                    android:layout_gravity="start"
                    android:layout_marginStart="7sp"
                    android:layout_marginTop="5sp"/>

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Nhập mật khẩu"
                    android:maxLength="64"
                    android:layout_gravity="start"
                    android:layout_marginStart="40sp"/>

                <ImageView
                    android:id="@+id/imgv_Showpass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_baseline_icon_eye"/>

                <ImageView
                    android:id="@+id/imgv_Hidepass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_baseline_icon_off_eye"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu"
                android:textSize="20sp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:textColor="@color/black"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rectangle_radius"
                android:layout_marginTop="8sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_icon_lock"
                    android:layout_gravity="start"
                    android:layout_marginStart="7sp"
                    android:layout_marginTop="5sp"/>

                <EditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Xác nhận mật khẩu"
                    android:maxLength="64"
                    android:layout_gravity="start"
                    android:layout_marginStart="40sp"/>

                <ImageView
                    android:id="@+id/imgv_confirm_Showpass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_baseline_icon_eye"/>

                <ImageView
                    android:id="@+id/imgv_confirm_Hidepass"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_baseline_icon_off_eye"/>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập chính xác email để nhận mã OTP"
                android:textStyle="italic"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                />

            <Button
                android:id="@+id/btn_Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:backgroundTint="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>